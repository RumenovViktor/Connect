@model UserLogin

<div class="panel panel-default form-group">
    <div  class="panel-heading">
        <h4>Login</h4>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Login", "Login"))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-lg-12">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-group", placeholder = "Email...", type = "email" })
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-user"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-group", placeholder = "Password...", type = "password" })
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <input class="col-md-12 col-lg-12 btn btn-success" type="submit" value="Login" />
                </div>
            </div>
        }
    </div>
</div>
