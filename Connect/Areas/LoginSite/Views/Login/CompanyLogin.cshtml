@model CompanyLogin

<div class="form-group">
    @using (Html.BeginForm("Login", "Login"))
    {
        @Html.AntiForgeryToken()
        <div id="company-login-wrapper">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-group", placeholder = "Email...", type = "email" })
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-user"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-group", placeholder = "Password...", type = "password" })
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input class="col-md-12 col-lg-12 btn btn-success" type="submit" value="Login" />
                </div>
            </div>
        </div>
    }
</div>