@model ExperienceViewModel
@{ 
    var startDateMonthName = System.Globalization.CultureInfo.GetCultureInfo("en-US").DateTimeFormat.GetAbbreviatedMonthName(Model.StartDate.Value.Month);
}

<div class="">
    <div class="col-md-1">
        <div class="form-group">
            <img src="~/Content/Images/company-default.png" style="width: 85px;height:85px;" class="img-circle" />
        </div>
    </div>
    <div class="col-md-11">
        <div class="form-group">
            <div class="col-lg-12">
                <h4><strong>@Model.Position</strong></h4>
            </div>
            <div class="col-lg-12">
                <h5>Connect</h5>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <h5>
                        @(startDateMonthName + " " + Model.StartDate.Value.Day + ", " + Model.StartDate.Value.Year)
                        -
                        @if (Model.EndDate.HasValue)
                        {
                            var endDateMonthName = System.Globalization.CultureInfo.GetCultureInfo("en-US").DateTimeFormat.GetAbbreviatedMonthName(Model.EndDate.Value.Month);
                            @(endDateMonthName + " " + Model.EndDate.Value.Day + ", " + Model.EndDate.Value.Year)
                        }
                        else
                        {
                            @("Present")
                        }
                    </h5>
                </div>
            </div>
            <div class="col-lg-12">
                <h5>@Model.Description</h5>
            </div>
        </div>
    </div>
    <hr />
</div>