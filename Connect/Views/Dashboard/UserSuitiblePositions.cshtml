@model IList<UserSuitiblePosition>


@foreach (var position in Model)
{
    <div class="col-lg-2">

        <div class="card">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="card-block text-center">
                        <div class="form-group text-center">
                            <img src="~/Content/Images/profile-image.png" width="85px" height="85px" class="img-circle" />
                        </div>
                        <div class="card-block text-center">
                            <h4 class="card-text">@position.PositionName</h4>
                            <p class="card-title">@position.CompanyName</p>
                            <p class="card-text">@(position.MatchPersentage + " %")</p>
                            @Html.ActionLink("View Position", "", "", new { }, new { @class = "text-center btn btn-outline btn-info" })
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
}
