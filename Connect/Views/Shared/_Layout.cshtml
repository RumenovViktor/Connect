<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connect</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href='@Url.Action("UserDashboard", "Dashboard")'>
                    <img src="~/Content/Images/C.png" style="width: 49px;" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class=""><i class="glyphicon glyphicon-bell"></i></a>
                    </li>
                    <li>
                        <a href="#" class=""><i class="glyphicon glyphicon-envelope"></i></a>
                    </li>
                    <li>
                        <a href="#" class=""><i class="glyphicon glyphicon-user"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @*TODO: Move scripts to bundle to be loaded for the places they are needed.*@
    <script src="~/Scripts/ConnectScripts/Global/connect.js"></script>
    <script src="~/Scripts/ConnectScripts/BusinessInfo/connect.companies.js"></script>
    <script src="~/Scripts/ConnectScripts/Global/connect.utils.js"></script>
    <script type="text/javascript">
        $("#file").filestyle({ buttonName: "btn btn-default col-lg-12" });
        $("#file").filestyle("size", "md");
        $(":file").filestyle('input', false);
        $("#file").filestyle('buttonText', 'Change pucture');
    </script>
    <script src="~/Scripts/ConnectScripts/Profile/profile-basic-info.js"></script>
    @RenderSection("ProfileScripts", required: false)
    @RenderSection("DashboardScripts", required: false)
</body>
</html>
